@using VotingSystem.Web.Areas.User.ViewModels
@model List<CandidateViewModel>
@{
    ViewBag.Title = "All Candidates";
}

@foreach (var candidate in Model)
{
    <div class="well">
        <div class="row">
            <div class="col-md-4">
                <h2>@candidate.Name</h2>
            </div>
            <div class="col-md-8">
                <p>@candidate.Description</p>
            </div>
        </div>
    </div>
}


